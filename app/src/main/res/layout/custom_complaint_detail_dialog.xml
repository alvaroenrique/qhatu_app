<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/modal_complaint_detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:textAppearance="@style/sectitle"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="@string/dialog_what_happened"/>

    <EditText
        android:id="@+id/eteComplaintDetail"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/modal_complaint_detail_text"
        android:layout_centerHorizontal="true"
        android:hint="@string/dialog_complaint_hint"/>

    <ImageView
        android:id="@+id/iviComplaintDetail"
        android:layout_width="250dp"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_below="@id/eteComplaintDetail"/>

    <Button
        android:id="@+id/butComplaintDetail"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginVertical="10dp"
        android:background="@drawable/red_button"
        android:layout_below="@+id/iviComplaintDetail"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/button_text"
        android:text="@string/dialog_complaint_button"/>

</RelativeLayout>