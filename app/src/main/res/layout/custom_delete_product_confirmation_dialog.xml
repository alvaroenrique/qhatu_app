<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="21dp"
    android:paddingRight="21dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/modal_what_to_do_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:paddingVertical="5dp"
        android:textAppearance="@style/sectitle"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:text="Â¡Un momento!"/>

    <TextView
        android:id="@+id/teviDisableProduct"
        android:layout_width="295dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_below="@+id/modal_what_to_do_title"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:gravity="center"
        android:textAppearance="@style/modal_text"
        android:text="Al presionar eliminar usted eliminara 1 leche gloria de 1 litro de su lista de productos. Este cambio no puede ser revertido. Pero si puede volver a anadir el producto cuando desee."/>

    <Button
        android:id="@+id/butDeleteProduct"
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/red_button"
        android:layout_below="@+id/teviDisableProduct"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/button_text"
        android:text="Eliminar"/>

</RelativeLayout>