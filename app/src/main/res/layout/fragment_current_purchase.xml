<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/teviCurrentOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalle de tu pedido"
        android:textAppearance="@style/sectitle"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/border_bottom"/>

    <RelativeLayout
        android:id="@+id/relaOrderDeliverDate"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/teviCurrentOrder"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Fecha de entrega"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="10 de marzo a las 9:00am"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaOrderPurchaseMarketValue"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderDeliverDate"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Boleta de compra"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="Compra pendiente"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaServiceCost"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderPurchaseMarketValue"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Costo de servicio"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="S/. 15.00"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaOrderState"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaServiceCost"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Estado"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="En camino"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaSupermarket"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderState"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Super Mercado"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="Wong"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaPurchareList"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaSupermarket"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Tu lista de compras"
            android:textAppearance="@style/item_list_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relaDeliverDuo"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaPurchareList"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="Tu duo de entrega"
            android:textAppearance="@style/item_list_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name"/>

    </RelativeLayout>

</RelativeLayout>