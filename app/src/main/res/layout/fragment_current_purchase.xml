<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.mainflow.fragments.CurrentPurchaseFragment"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/teviCurrentOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/order_detail_title"
        android:textAppearance="@style/sectitle"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@drawable/border_bottom"/>

    <RelativeLayout
        android:id="@+id/relaOrderDeliverDate"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/teviCurrentOrder"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_deliver_date"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:id="@+id/teviOrderDetailDeliveryDate"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="@string/deliver_date_text"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaOrderPurchaseMarketValue"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderDeliverDate"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/purchase_ticket"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:id="@+id/teviOrderDetailPurchaseMarketValue"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="@string/purchase_ticket_value"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaServiceCost"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderPurchaseMarketValue"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/service_cost"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:id="@+id/teviOrderDetailServiceCost"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="@string/service_cost_value"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaOrderState"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaServiceCost"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/order_state"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:id="@+id/teviOrderDetailStatus"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="@string/order_state_value"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaSupermarket"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaOrderState"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/supermarket"
            android:textAppearance="@style/item_list_name"/>

        <TextView
            android:id="@+id/teviOrderDetailSuperMarket"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textAlignment="viewEnd"
            android:gravity="end"
            android:textAppearance="@style/normal_text"
            android:text="@string/supermarket_selected"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relaPurchareList"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaSupermarket"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/purchase_list"
            android:textAppearance="@style/item_list_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name"/>

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relaDeliverDuo"
        android:layout_width="match_parent"
        android:layout_height="69dp"
        android:layout_below="@+id/relaPurchareList"
        android:paddingVertical="15dp"
        android:paddingHorizontal="30dp"
        android:background="@drawable/border_bottom">

        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/delivery_duo"
            android:textAppearance="@style/item_list_name"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_name"/>

    </RelativeLayout>

</RelativeLayout>